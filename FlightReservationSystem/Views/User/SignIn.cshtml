@model User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <head>
        <!-- Diğer head içeriği ... -->
        <link rel="stylesheet" href="~/css/SignIn.css" asp-append-version="true" />
    </head>
    <div class="container mt-5">
        <h2>Sign In</h2>

            <div class="form-group">
                <label asp-for="Email">Email address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
            <a asp-controller="User" asp-action="SignIn" class="btn btn-outline-primary btn-lg">Sign Up</a>
    </div>
</form>

