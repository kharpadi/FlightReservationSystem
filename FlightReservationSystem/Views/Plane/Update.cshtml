@model Plane
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <head>
        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <link rel="stylesheet" href="~/css/SignUp.css" asp-append-version="true" />
    </head>
    <div class="container mt-5">
        <h2>Update Plane</h2>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter the Name of Plane">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type">Plane Type:</label>
                <select asp-for="Type" id="Type" class="form-control" placeholder="Plane Type" required>
                    <option value="Standard">Standard</option>
                    <option value="Private">Private</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TotalSeat">Total Seat</label>
                <input asp-for="TotalSeat" id="TotalSeat" type="text" class="form-control" placeholder="Total Seat" readonly>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg">Update</button>
            <a asp-controller="Plane" asp-action="Index" class="btn btn-secondary btn-lg">Back to the List</a>
    </div>
</form>
<script>
    $(document).ready(function () {
        // Type değiştiğinde updateSeatCount fonksiyonunu çağırın
        $("#Type").change(function () {
            updateSeatCount();
        });

        // Sayfa yüklendiğinde varsayılan değeri ayarla
        updateSeatCount();
    });

    function updateSeatCount() {
        var aircraftType = $("#Type").val();
        var seatCountInput = $("#TotalSeat");

        // Uçak tipine göre koltuk sayısını ayarla
        if (aircraftType === "Standard") {
            seatCountInput.val("300");
        } else if (aircraftType === "Private") {
            seatCountInput.val("150");
        }
    }
</script>